<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Pub's Lounge</title>
    <link rel="stylesheet" href="/dashboard/static/css/dashboard.css">
    <style>
        .token-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 12px;
            margin-top: 16px;
        }
        .token-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 12px;
            background: var(--bg-tertiary);
            border-radius: 6px;
        }
        .token-item .game-name {
            flex: 1;
        }
        .game-select-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 8px;
            max-height: 300px;
            overflow-y: auto;
            padding: 12px;
            background: var(--bg-primary);
            border-radius: 6px;
        }
        .game-checkbox {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px;
            border-radius: 4px;
        }
        .game-checkbox:hover {
            background: var(--bg-hover);
        }
        .success-banner {
            background: rgba(35, 165, 89, 0.2);
            border: 1px solid var(--accent-success);
            color: var(--accent-success);
            padding: 12px 16px;
            border-radius: 6px;
            margin-bottom: 16px;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <span class="logo">üç∫</span>
                <h1>Pub's Lounge</h1>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard" class="nav-item"><span class="nav-icon">üìä</span><span>Dashboard</span></a>
                <a href="/dashboard/games" class="nav-item"><span class="nav-icon">üéÆ</span><span>Games</span></a>
                <a href="/dashboard/accounts" class="nav-item active"><span class="nav-icon">üë§</span><span>Accounts</span></a>
                <a href="/dashboard/tokens" class="nav-item"><span class="nav-icon">üé´</span><span>Tokens</span></a>
                <a href="/dashboard/transcripts" class="nav-item"><span class="nav-icon">üìú</span><span>Transcripts</span></a>
                <div class="nav-divider"></div>
                <div class="nav-section-title" style="padding: 8px 16px; font-size: 11px; text-transform: uppercase; color: var(--text-muted); font-weight: 600; letter-spacing: 0.5px;">üéØ Ubisoft</div>
                <a href="/dashboard/ubisoft-games" class="nav-item">
                    <span class="nav-icon">üéÆ</span>
                    <span>Ubisoft Games</span>
                </a>
                <a href="/dashboard/ubisoft-accounts" class="nav-item">
                    <span class="nav-icon">üë§</span>
                    <span>Ubisoft Accounts</span>
                </a>
                <a href="/dashboard/ubisoft-tokens" class="nav-item">
                    <span class="nav-icon">üé´</span>
                    <span>Ubisoft Tokens</span>
                </a>
                <a href="/dashboard/ubisoft-activations" class="nav-item">
                    <span class="nav-icon">‚úÖ</span>
                    <span>Ubisoft Activations</span>
                </a>
                <div class="nav-divider"></div>
                <a href="/dashboard/analytics" class="nav-item"><span class="nav-icon">üìà</span><span>Analytics</span></a>
                <a href="/dashboard/activations" class="nav-item"><span class="nav-icon">‚úÖ</span><span>Activated Users</span></a>
                <div class="nav-divider"></div>
                <a href="/dashboard/generate" class="nav-item"><span class="nav-icon">‚ö°</span><span>Generate Token</span></a>
                <a href="/dashboard/ticket-logs" class="nav-item"><span class="nav-icon">üé´</span><span>Ticket Logs</span></a>
                <a href="/dashboard/audit-logs" class="nav-item"><span class="nav-icon">üìã</span><span>Audit Logs</span></a>
                <a href="/dashboard/staff-activity" class="nav-item">
                <span class="nav-icon">‚è≥</span>
                <span>Staff Activity</span>
            </a>
            <a href="/dashboard/macros" class="nav-item">
                <span class="nav-icon">üìù</span>
                <span>Macros</span>
            </a>
            <a href="/dashboard/files" class="nav-item"><span class="nav-icon">üìÅ</span><span>File Manager</span></a>
            </nav>
            <% if (user) { %>
            <div class="sidebar-footer">
                <div class="user-info">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="" class="user-avatar" onerror="this.style.display='none'">
                    <div class="user-details">
                        <span class="user-name"><%= user.username %></span>
                        <span class="user-role">Staff</span>
                    </div>
                </div>
                <a href="/dashboard/logout" class="logout-btn">Logout</a>
            </div>
            <% } %>
        </aside>
        
        <main class="main-content">
            <header class="content-header">
                <h2><%= title %></h2>
                <div class="header-actions">
                    <a href="/dashboard/accounts" class="btn btn-secondary">‚Üê Back to Accounts</a>
                </div>
            </header>
            
            <div class="content-body">
                <script>
                    const params = new URLSearchParams(window.location.search);
                    const success = params.get('success');
                    if (success) {
                        const messages = {
                            'tokens-added': '‚úÖ Tokens added successfully!',
                            'token-deleted': '‚úÖ Token deleted successfully!',
                            'bulk-added': '‚úÖ Bulk tokens added! Count: ' + (params.get('count') || '?')
                        };
                        if (messages[success]) {
                            document.write('<div class="success-banner">' + messages[success] + '</div>');
                        }
                    }
                </script>
                
                <div class="grid-2">
                    <!-- Account Details Form -->
                    <div class="card">
                        <div class="card-header">
                            <h3><%= account ? '‚úèÔ∏è Edit Account' : '‚ûï Add New Account' %></h3>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="<%= action %>">
                                <div class="form-group">
                                    <label class="form-label">Account Number *</label>
                                    <input type="number" name="account_number" class="form-input" required 
                                           value="<%= account ? account.account_number : '' %>" 
                                           placeholder="e.g. 1, 2, 3...">
                                    <small style="color: var(--text-muted);">Must match omega.exe account numbering</small>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label">Account Name *</label>
                                    <input type="text" name="account_name" class="form-input" required
                                           value="<%= account ? account.account_name : '' %>" 
                                           placeholder="e.g. sonofamuffin868">
                                    <small style="color: var(--text-muted);">Steam account username</small>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label">Status</label>
                                    <select name="status" class="form-select">
                                        <option value="active" <%= (!account || account.status === 'active') ? 'selected' : '' %>>‚úÖ Active</option>
                                        <option value="inactive" <%= account && account.status === 'inactive' ? 'selected' : '' %>>‚ùå Inactive</option>
                                    </select>
                                </div>
                                
                                <% if (!account) { %>
                                <!-- Token creation options for new accounts -->
                                <div class="form-group" style="margin-top: 24px; padding-top: 16px; border-top: 1px solid var(--border-color);">
                                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                                        <input type="checkbox" name="create_tokens" id="create_tokens" 
                                               style="width: 18px; height: 18px;" onchange="toggleGameSelect()">
                                        <span>üé´ Create tokens for this account</span>
                                    </label>
                                </div>
                                
                                <div id="game-select-container" style="display: none;">
                                    <div class="form-group">
                                        <label class="form-label">Select Games for Token Slots</label>
                                        <div style="margin-bottom: 8px;">
                                            <button type="button" class="btn btn-sm btn-secondary" onclick="selectAllGames()">Select All</button>
                                            <button type="button" class="btn btn-sm btn-secondary" onclick="deselectAllGames()">Deselect All</button>
                                        </div>
                                        <div class="game-select-grid">
                                            <% games.forEach(g => { %>
                                            <label class="game-checkbox">
                                                <input type="checkbox" name="games_for_tokens" value="<%= g.id %>">
                                                <%= g.game_name %>
                                            </label>
                                            <% }) %>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                
                                <div style="display: flex; gap: 12px; margin-top: 24px;">
                                    <button type="submit" class="btn btn-primary">
                                        <%= account ? 'üíæ Save Changes' : '‚ûï Add Account' %>
                                    </button>
                                    <a href="/dashboard/accounts" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                            
                            <% if (account) { %>
                            <div style="margin-top: 32px; padding-top: 24px; border-top: 1px solid var(--border-color);">
                                <h4 style="color: var(--accent-danger); margin-bottom: 12px;">‚ö†Ô∏è Danger Zone</h4>
                                <p style="color: var(--text-muted); margin-bottom: 16px;">
                                    Deleting this account will also delete all associated tokens. This action cannot be undone.
                                </p>
                                <form method="POST" action="/dashboard/accounts/<%= account.id %>/delete" 
                                      onsubmit="return confirm('Are you sure you want to delete account #<%= account.account_number %> - <%= account.account_name %>?\n\nThis will also delete ALL tokens for this account!');">
                                    <button type="submit" class="btn btn-danger">üóëÔ∏è Delete Account</button>
                                </form>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <% if (account && typeof existingTokens !== 'undefined') { %>
                    <!-- Token Management -->
                    <div class="card">
                        <div class="card-header">
                            <h3>üé´ Token Slots (<%= existingTokens.length %>)</h3>
                        </div>
                        <div class="card-body">
                            <!-- Add Token Form -->
                            <form method="POST" action="/dashboard/accounts/<%= account.id %>/add-tokens" style="margin-bottom: 16px;">
                                <div style="display: flex; gap: 8px; align-items: flex-end;">
                                    <div class="form-group" style="flex: 1; margin-bottom: 0;">
                                        <label class="form-label">Game</label>
                                        <select name="game_id" class="form-select" required>
                                            <option value="">Select game...</option>
                                            <% games.forEach(g => { %>
                                            <option value="<%= g.id %>"><%= g.game_name %></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <div class="form-group" style="width: 80px; margin-bottom: 0;">
                                        <label class="form-label">Count</label>
                                        <input type="number" name="token_count" class="form-input" value="1" min="1" max="50">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </form>
                            
                            <!-- Bulk Add Button -->
                            <form method="POST" action="/dashboard/accounts/<%= account.id %>/add-all-tokens" style="margin-bottom: 16px;">
                                <button type="submit" class="btn btn-success" onclick="return confirm('Add token slots for ALL games that don\\'t already have one?');">
                                    ‚ûï Add Missing Game Tokens
                                </button>
                            </form>
                            
                            <!-- Existing Tokens -->
                            <% if (existingTokens.length > 0) { %>
                            <div class="token-grid">
                                <% existingTokens.forEach(t => { %>
                                <div class="token-item">
                                    <span class="game-name"><%= t.game_name || 'Unknown Game' %> (Slot <%= t.token_number %>)</span>
                                    <span class="badge badge-<%= t.status === 'available' ? 'success' : 'warning' %>" style="margin-right: 8px;"><%= t.status %></span>
                                    <form method="POST" action="/dashboard/accounts/<%= account.id %>/tokens/<%= t.id %>/delete" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this token?');" title="Delete token">üóëÔ∏è</button>
                                    </form>
                                </div>
                                <% }) %>
                            </div>
                            <% } else { %>
                            <div class="empty-state">
                                <p>No tokens yet. Add tokens using the form above.</p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </main>
    </div>
    
    <script>
        function toggleGameSelect() {
            const container = document.getElementById('game-select-container');
            const checkbox = document.getElementById('create_tokens');
            container.style.display = checkbox.checked ? 'block' : 'none';
        }
        
        function selectAllGames() {
            document.querySelectorAll('input[name="games_for_tokens"]').forEach(cb => cb.checked = true);
        }
        
        function deselectAllGames() {
            document.querySelectorAll('input[name="games_for_tokens"]').forEach(cb => cb.checked = false);
        }
    </script>
</body>
</html>
