<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Pub's Lounge</title>
    <link rel="stylesheet" href="/dashboard/static/css/dashboard.css">
    <style>
        .timer { font-family: monospace; font-weight: bold; }
        .timer.ready { color: var(--accent-success); }
        .timer.soon { color: var(--accent-warning); }
        .timer.waiting { color: var(--text-muted); }
        .account-card {
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 16px;
        }
        .account-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }
        .account-name {
            font-size: 18px;
            font-weight: 600;
        }
        .account-stats {
            display: flex;
            gap: 24px;
            margin-bottom: 12px;
        }
        .account-stat {
            text-align: center;
        }
        .account-stat .value {
            font-size: 24px;
            font-weight: bold;
        }
        .account-stat .label {
            font-size: 12px;
            color: var(--text-muted);
        }
        .token-list {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 12px;
        }
        .token-chip {
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        .token-chip.available {
            background: rgba(35, 165, 89, 0.2);
            color: var(--accent-success);
        }
        .token-chip.used {
            background: rgba(240, 178, 50, 0.2);
            color: var(--accent-warning);
        }
        .success-banner {
            background: rgba(35, 165, 89, 0.2);
            border: 1px solid var(--accent-success);
            color: var(--accent-success);
            padding: 12px 16px;
            border-radius: 6px;
            margin-bottom: 16px;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <span class="logo">ğŸº</span>
                <h1>Pub's Lounge</h1>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard" class="nav-item"><span class="nav-icon">ğŸ“Š</span><span>Dashboard</span></a>
                <a href="/dashboard/games" class="nav-item"><span class="nav-icon">ğŸ®</span><span>Games</span></a>
                <a href="/dashboard/accounts" class="nav-item active"><span class="nav-icon">ğŸ‘¤</span><span>Accounts</span></a>
                <a href="/dashboard/tokens" class="nav-item"><span class="nav-icon">ğŸ«</span><span>Tokens</span></a>
                <a href="/dashboard/transcripts" class="nav-item"><span class="nav-icon">ğŸ“œ</span><span>Transcripts</span></a>
                <div class="nav-divider"></div>
                <a href="/dashboard/analytics" class="nav-item"><span class="nav-icon">ğŸ“ˆ</span><span>Analytics</span></a>
                <a href="/dashboard/activations" class="nav-item"><span class="nav-icon">âœ…</span><span>Activated Users</span></a>
                <div class="nav-divider"></div>
                <a href="/dashboard/generate" class="nav-item"><span class="nav-icon">âš¡</span><span>Generate Token</span></a>
                <a href="/dashboard/ticket-logs" class="nav-item"><span class="nav-icon">ğŸ«</span><span>Ticket Logs</span></a>
                <a href="/dashboard/audit-logs" class="nav-item"><span class="nav-icon">ğŸ“‹</span><span>Audit Logs</span></a>
                <a href="/dashboard/staff-activity" class="nav-item">
                <span class="nav-icon">â³</span>
                <span>Staff Activity</span>
            </a>
            <a href="/dashboard/macros" class="nav-item">
                <span class="nav-icon">ğŸ“</span>
                <span>Macros</span>
            </a>
            <a href="/dashboard/files" class="nav-item"><span class="nav-icon">ğŸ“</span><span>File Manager</span></a>
                
                <div class="nav-divider"></div>
                
                <div class="nav-section-title">ğŸŸ  Ubisoft</div>
                <a href="/dashboard/ubisoft" class="nav-item"><span class="nav-icon">ğŸ®</span><span>Ubisoft Games</span></a>
                
                <div class="nav-divider"></div>
                
                <div class="nav-section-title">ğŸ”´ EA</div>
                <a href="/dashboard/ea" class="nav-item"><span class="nav-icon">ğŸ®</span><span>EA Games</span></a>
                <a href="/dashboard/ea/requests" class="nav-item"><span class="nav-icon">ğŸ“‹</span><span>EA Requests</span></a>
                
                <div class="nav-divider"></div>
                
                <div class="nav-section-title">ğŸ“¦ Sigma</div>
                <a href="/dashboard/sigma" class="nav-item"><span class="nav-icon">ğŸ“¦</span><span>Sigma UI</span></a>
            </nav>
            <% if (user) { %>
            <div class="sidebar-footer">
                <div class="user-info">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="" class="user-avatar" onerror="this.style.display='none'">
                    <div class="user-details">
                        <span class="user-name"><%= user.username %></span>
                        <span class="user-role">Staff</span>
                    </div>
                </div>
                <a href="/dashboard/logout" class="logout-btn">Logout</a>
            </div>
            <% } %>
        </aside>
        
        <main class="main-content">
            <header class="content-header">
                <h2><%= title %> (<%= accounts.length %>)</h2>
                <div class="header-actions">
                    <a href="/dashboard/accounts/add" class="btn btn-primary">+ Add Account</a>
                </div>
            </header>
            
            <div class="content-body">
                <script>
                    const params = new URLSearchParams(window.location.search);
                    const success = params.get('success');
                    if (success) {
                        const messages = {
                            'reset': 'âœ… Account tokens reset successfully!',
                            'added': 'âœ… Account added successfully!',
                            'updated': 'âœ… Account updated successfully!',
                            'deleted': 'âœ… Account deleted successfully!'
                        };
                        if (messages[success]) {
                            document.write('<div class="success-banner">' + messages[success] + '</div>');
                        }
                    }
                </script>
                
                <% accounts.forEach(acc => { %>
                <div class="account-card">
                    <div class="account-header">
                        <div>
                            <span class="account-name">#<%= acc.account_number %> - <%= acc.account_name %></span>
                            <% if (acc.status !== 'active') { %>
                            <span class="badge badge-danger" style="margin-left: 8px;">Inactive</span>
                            <% } %>
                        </div>
                        <div>
                            <a href="/dashboard/accounts/<%= acc.id %>/edit" class="btn btn-sm btn-secondary">âœï¸ Edit</a>
                            <a href="/dashboard/tokens?account=<%= acc.id %>" class="btn btn-sm btn-secondary">View Tokens</a>
                            <form method="POST" action="/dashboard/accounts/<%= acc.id %>/reset" style="display: inline; margin-left: 8px;"
                                  onsubmit="return confirm('Reset all tokens for this account to available?');">
                                <button type="submit" class="btn btn-sm btn-warning">ğŸ”„ Reset All</button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="account-stats">
                        <div class="account-stat">
                            <div class="value" style="color: var(--accent-success);"><%= acc.available_tokens %></div>
                            <div class="label">Available</div>
                        </div>
                        <div class="account-stat">
                            <div class="value" style="color: var(--accent-warning);"><%= acc.regenerating_tokens || 0 %></div>
                            <div class="label">Regenerating</div>
                        </div>
                        <div class="account-stat">
                            <div class="value"><%= acc.total_tokens %></div>
                            <div class="label">Total</div>
                        </div>
                    </div>
                    
                    <% if (acc.tokens && acc.tokens.length > 0) { %>
                    <div style="border-top: 1px solid var(--border-color); padding-top: 12px; margin-top: 8px;">
                        <small style="color: var(--text-muted);">Token Slots:</small>
                        <div class="token-list">
                            <% acc.tokens.forEach(t => { %>
                            <div class="token-chip <%= t.status %>">
                                <span>Slot <%= t.token_number || '?' %></span>
                                <% if (t.status === 'used' && t.regenerates_at) { %>
                                <span class="timer" data-regen="<%= t.regenerates_at %>">...</span>
                                <% } else if (t.status === 'available') { %>
                                <span>âœ…</span>
                                <% } %>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <% } %>
                </div>
                <% }) %>
            </div>
        </main>
    </div>
    
    <script>
        // Live countdown timers
        function updateTimers() {
            const timers = document.querySelectorAll('.timer[data-regen]');
            const now = new Date().getTime();
            
            timers.forEach(timer => {
                const regenTime = new Date(timer.dataset.regen).getTime();
                const diff = regenTime - now;
                
                if (diff <= 0) {
                    timer.innerHTML = 'âœ…';
                    timer.className = 'timer ready';
                } else {
                    const hours = Math.floor(diff / (1000 * 60 * 60));
                    const mins = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const secs = Math.floor((diff % (1000 * 60)) / 1000);
                    
                    if (hours > 0) {
                        timer.innerHTML = `${hours}h ${mins}m`;
                    } else if (mins > 0) {
                        timer.innerHTML = `${mins}m ${secs}s`;
                    } else {
                        timer.innerHTML = `${secs}s`;
                    }
                    
                    if (diff < 5 * 60 * 1000) {
                        timer.className = 'timer soon';
                    } else {
                        timer.className = 'timer waiting';
                    }
                }
            });
        }
        
        updateTimers();
        setInterval(updateTimers, 1000);
    </script>
</body>
</html>
