<%- include('partials/header', { title: title }) %>

<style>
.heatmap-cell {
    width: 30px;
    height: 25px;
    display: inline-block;
    margin: 1px;
    border-radius: 3px;
}
.heatmap-row {
    display: flex;
    align-items: center;
}
.heatmap-label {
    width: 50px;
    font-size: 11px;
    text-align: right;
    padding-right: 5px;
}
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-file-export"></i> Reports & Analytics</h1>
    </div>

    <!-- Export Section -->
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-download"></i> Export Data (CSV)</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="d-grid">
                        <a href="/dashboard/reports/export/activations" class="btn btn-outline-success mb-2">
                            <i class="fas fa-check-circle"></i> All Activations
                        </a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="d-grid">
                        <a href="/dashboard/reports/export/staff" class="btn btn-outline-primary mb-2">
                            <i class="fas fa-users-cog"></i> Staff Report
                        </a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="d-grid">
                        <a href="/dashboard/reports/export/games" class="btn btn-outline-info mb-2">
                            <i class="fas fa-gamepad"></i> Games Report
                        </a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="d-grid">
                        <a href="/dashboard/reports/export/users" class="btn btn-outline-warning mb-2">
                            <i class="fas fa-user"></i> Users Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Peak Hours Heatmap -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header"><i class="fas fa-fire"></i> Peak Hours Heatmap (Last 30 Days)</div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">Hours (UTC) â†’</small>
                    </div>
                    <div class="d-flex mb-1">
                        <div class="heatmap-label"></div>
                        <% for (let h = 0; h < 24; h++) { %>
                        <div style="width: 30px; text-align: center; font-size: 10px;"><%= h.toString().padStart(2, '0') %></div>
                        <% } %>
                    </div>
                    <% const days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat']; %>
                    <% days.forEach(function(day, dayIndex) { %>
                    <div class="heatmap-row">
                        <div class="heatmap-label"><%= day %></div>
                        <% for (let h = 0; h < 24; h++) { %>
                            <% 
                            const count = heatmap.matrix && heatmap.matrix[dayIndex] ? heatmap.matrix[dayIndex][h] : 0;
                            const intensity = heatmap.maxCount > 0 ? count / heatmap.maxCount : 0;
                            let bgColor;
                            if (count === 0) bgColor = '#f0f0f0';
                            else if (intensity < 0.25) bgColor = '#c6efce';
                            else if (intensity < 0.5) bgColor = '#ffeb9c';
                            else if (intensity < 0.75) bgColor = '#ffcc99';
                            else bgColor = '#ffc7ce';
                            %>
                            <div class="heatmap-cell" style="background-color: <%= bgColor %>;" title="<%= day %> <%= h %>:00 - <%= count %> activations"></div>
                        <% } %>
                    </div>
                    <% }); %>
                    <div class="mt-3">
                        <small class="text-muted">
                            <span style="display: inline-block; width: 20px; height: 15px; background: #f0f0f0; border-radius: 2px;"></span> None
                            <span style="display: inline-block; width: 20px; height: 15px; background: #c6efce; border-radius: 2px; margin-left: 10px;"></span> Low
                            <span style="display: inline-block; width: 20px; height: 15px; background: #ffeb9c; border-radius: 2px; margin-left: 10px;"></span> Medium
                            <span style="display: inline-block; width: 20px; height: 15px; background: #ffcc99; border-radius: 2px; margin-left: 10px;"></span> High
                            <span style="display: inline-block; width: 20px; height: 15px; background: #ffc7ce; border-radius: 2px; margin-left: 10px;"></span> Peak
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Growth Trends -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header"><i class="fas fa-chart-line"></i> Growth Trends</div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Steam</h6>
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1" style="height: 25px;">
                                <div class="progress-bar bg-<%= (trends.growth?.steam || 0) >= 0 ? 'success' : 'danger' %>" 
                                     style="width: <%= Math.min(Math.abs(trends.growth?.steam || 0), 100) %>%">
                                </div>
                            </div>
                            <span class="ms-2 badge bg-<%= (trends.growth?.steam || 0) >= 0 ? 'success' : 'danger' %>">
                                <%= (trends.growth?.steam || 0) >= 0 ? '+' : '' %><%= trends.growth?.steam || 0 %>%
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <h6>EA</h6>
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1" style="height: 25px;">
                                <div class="progress-bar bg-<%= (trends.growth?.ea || 0) >= 0 ? 'success' : 'danger' %>" 
                                     style="width: <%= Math.min(Math.abs(trends.growth?.ea || 0), 100) %>%">
                                </div>
                            </div>
                            <span class="ms-2 badge bg-<%= (trends.growth?.ea || 0) >= 0 ? 'success' : 'danger' %>">
                                <%= (trends.growth?.ea || 0) >= 0 ? '+' : '' %><%= trends.growth?.ea || 0 %>%
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <h6>Ubisoft</h6>
                        <div class="d-flex align-items-center">
                            <div class="progress flex-grow-1" style="height: 25px;">
                                <div class="progress-bar bg-<%= (trends.growth?.ubisoft || 0) >= 0 ? 'success' : 'danger' %>" 
                                     style="width: <%= Math.min(Math.abs(trends.growth?.ubisoft || 0), 100) %>%">
                                </div>
                            </div>
                            <span class="ms-2 badge bg-<%= (trends.growth?.ubisoft || 0) >= 0 ? 'success' : 'danger' %>">
                                <%= (trends.growth?.ubisoft || 0) >= 0 ? '+' : '' %><%= trends.growth?.ubisoft || 0 %>%
                            </span>
                        </div>
                    </div>
                    <small class="text-muted">Comparing first half vs second half of period</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Daily Trend Chart -->
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-chart-area"></i> Daily Activations (30 Days)</div>
        <div class="card-body">
            <canvas id="trendChart" height="100"></canvas>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="card">
        <div class="card-header"><i class="fas fa-link"></i> Quick Analytics Links</div>
        <div class="card-body">
            <div class="btn-group-vertical d-md-flex flex-md-row gap-2">
                <a href="/dashboard/analytics" class="btn btn-outline-primary"><i class="fas fa-chart-pie"></i> Main Analytics</a>
                <a href="/dashboard/staff-leaderboard" class="btn btn-outline-success"><i class="fas fa-trophy"></i> Staff Leaderboard</a>
                <a href="/dashboard/power-users" class="btn btn-outline-warning"><i class="fas fa-star"></i> Power Users</a>
                <a href="/dashboard/problem-users" class="btn btn-outline-danger"><i class="fas fa-exclamation-triangle"></i> Problem Users</a>
                <a href="/dashboard/game-health" class="btn btn-outline-info"><i class="fas fa-heartbeat"></i> Game Health</a>
                <a href="/dashboard/activity-feed" class="btn btn-outline-secondary"><i class="fas fa-stream"></i> Activity Feed</a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const trendData = <%- JSON.stringify(trends.daily || []) %>;

// Group by platform
const steamData = trendData.filter(d => d.platform === 'steam');
const eaData = trendData.filter(d => d.platform === 'ea');
const ubiData = trendData.filter(d => d.platform === 'ubisoft');

// Get unique dates
const allDates = [...new Set(trendData.map(d => d.date))].sort();

new Chart(document.getElementById('trendChart'), {
    type: 'line',
    data: {
        labels: allDates,
        datasets: [{
            label: 'Steam',
            data: allDates.map(date => {
                const found = steamData.find(d => d.date === date);
                return found ? found.count : 0;
            }),
            borderColor: 'rgba(54, 162, 235, 1)',
            backgroundColor: 'rgba(54, 162, 235, 0.1)',
            fill: true,
            tension: 0.3
        }, {
            label: 'EA',
            data: allDates.map(date => {
                const found = eaData.find(d => d.date === date);
                return found ? found.count : 0;
            }),
            borderColor: 'rgba(255, 193, 7, 1)',
            backgroundColor: 'rgba(255, 193, 7, 0.1)',
            fill: true,
            tension: 0.3
        }, {
            label: 'Ubisoft',
            data: allDates.map(date => {
                const found = ubiData.find(d => d.date === date);
                return found ? found.count : 0;
            }),
            borderColor: 'rgba(40, 167, 69, 1)',
            backgroundColor: 'rgba(40, 167, 69, 0.1)',
            fill: true,
            tension: 0.3
        }]
    },
    options: {
        responsive: true,
        scales: { y: { beginAtZero: true } },
        interaction: { intersect: false, mode: 'index' }
    }
});
</script>

