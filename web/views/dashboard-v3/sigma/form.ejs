<%- include('../partials/header') %>

<div class="page-header">
    <h1 class="page-title">
        <span class="icon"><%= game ? '‚úèÔ∏è' : '‚ûï' %></span>
        <%= game ? 'Edit' : 'Add' %> Sigma Game
    </h1>
    <div class="page-actions">
        <a href="/dashboard/sigma" class="btn btn-secondary">‚Üê Back</a>
    </div>
</div>

<div class="card">
    <form method="POST" action="/dashboard/sigma<%= game ? '/' + game.id + '/edit' : '/add' %>">
        <div class="form-group">
            <label class="form-label">Game Name *</label>
            <input type="text" name="game_name" class="form-control" value="<%= game?.game_name || '' %>" required>
        </div>
        
        <div class="form-group">
            <label class="form-label">Platform</label>
            <input type="text" name="platform" class="form-control" value="<%= game?.platform || '' %>" placeholder="PC, PS5, Xbox, etc.">
        </div>
        
        <div class="form-group">
            <label class="form-label">Download Link</label>
            <input type="url" name="download_link" class="form-control" value="<%= game?.download_link || '' %>" placeholder="https://...">
        </div>
        
        <div class="form-group">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control" rows="4" placeholder="Game description..."><%= game?.description || '' %></textarea>
        </div>
        
        <div class="form-group">
            <label class="form-label">Instructions</label>
            <textarea name="instructions" class="form-control" rows="5" placeholder="Installation instructions..."><%= game?.instructions || '' %></textarea>
        </div>
        
        <% if (game) { %>
        <div class="form-group">
            <label class="form-label">
                <input type="checkbox" name="enabled" <%= game?.enabled ? 'checked' : '' %>>
                Enabled
            </label>
        </div>
        <% } %>
        
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary"><%= game ? 'üíæ Save Changes' : '‚ûï Add Game' %></button>
            <a href="/dashboard/sigma" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>
