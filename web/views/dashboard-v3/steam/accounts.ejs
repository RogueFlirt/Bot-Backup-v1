<%- include('../partials/header') %>

<div class="page-header">
    <h1 class="page-title">
        <span class="icon">üë§</span>
        Steam Accounts
    </h1>
</div>

<div class="card">
    <div class="card-header">
        <span class="card-title">Add Account</span>
    </div>
    <form method="POST" action="/dashboard/steam/accounts/add">
        <div class="form-row">
            <div class="form-group">
                <input type="text" name="account_name" class="form-control" placeholder="Account name" required>
            </div>
            <div class="form-group">
                <input type="number" name="account_number" class="form-control" placeholder="Account #" style="width:100px;">
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email (optional)">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="Password (optional)">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">‚ûï Add</button>
            </div>
        </div>
    </form>
</div>

<div class="card">
    <% if (accounts && accounts.length > 0) { %>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Account Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% accounts.forEach(acc => { %>
                <tr>
                    <td><%= acc.account_number || '-' %></td>
                    <td><strong><%= acc.account_name %></strong></td>
                    <td><%= acc.email || '-' %></td>
                    <td>
                        <span class="badge badge-<%= acc.enabled ? 'success' : 'danger' %>">
                            <%= acc.enabled ? 'Active' : 'Disabled' %>
                        </span>
                    </td>
                    <td>
                        <form method="POST" action="/dashboard/steam/accounts/<%= acc.id %>/delete" data-confirm="Delete this account?" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
    <div class="empty-state">
        <div class="icon">üë§</div>
        <p>No accounts configured.</p>
    </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
