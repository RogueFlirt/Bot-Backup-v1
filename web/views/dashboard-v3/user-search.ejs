<%- include('partials/header') %>

<div class="container mt-4">
    <h2><i class="bi bi-search"></i> User Search</h2>
    
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="/dashboard/user-search" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="q" class="form-control" placeholder="Search by User ID or Username..." 
                           value="<%= searchTerm || '' %>" autofocus>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <% if (searchTerm) { %>
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-people"></i> Search Results</span>
                <span class="badge bg-secondary"><%= users.length %> users found</span>
            </div>
            <div class="card-body p-0">
                <% if (users.length > 0) { %>
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Tickets</th>
                                <th>Last Activity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user) { %>
                            <tr>
                                <td><code><%= user.user_id %></code></td>
                                <td><%= user.username || 'Unknown' %></td>
                                <td><span class="badge bg-info"><%= user.ticket_count || 0 %></span></td>
                                <td><%= user.last_activity ? new Date(user.last_activity).toLocaleString() : 'N/A' %></td>
                                <td>
                                    <a href="/dashboard/user/<%= user.user_id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-person"></i> Profile
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-search fs-1"></i>
                        <p class="mt-2">No users found matching "<%= searchTerm %>"</p>
                    </div>
                <% } %>
            </div>
        </div>
    <% } else { %>
        <div class="card">
            <div class="card-body text-center text-muted p-5">
                <i class="bi bi-search fs-1"></i>
                <p class="mt-2">Enter a User ID or Username to search</p>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
