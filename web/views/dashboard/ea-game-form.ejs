<%- include('_layout-start') %>

<div class="content-header">
    <h2><%= game ? '‚úèÔ∏è Edit' : '‚ûï Add' %> EA Game</h2>
    <a href="/dashboard/ea/games" class="btn btn-secondary">‚Üê Back</a>
</div>

<div class="content-body">
    <div class="card" style="max-width: 600px;">
        <form method="POST" action="/dashboard/ea/games/<%= game ? game.id + '/edit' : 'add' %>">
            <div class="form-group">
                <label>Game ID</label>
                <input type="text" name="game_id" class="form-control" value="<%= game?.game_id || '' %>" required placeholder="e.g., fifa-24">
            </div>
            
            <div class="form-group">
                <label>Game Name</label>
                <input type="text" name="game_name" class="form-control" value="<%= game?.game_name || '' %>" required placeholder="e.g., FIFA 24">
            </div>
            
            <div class="form-group">
                <label>Folder Name</label>
                <input type="text" name="folder_name" class="form-control" value="<%= game?.folder_name || '' %>" placeholder="e.g., FIFA 24">
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label>Size (GB)</label>
                    <input type="number" name="size_gb" class="form-control" value="<%= game?.size_gb || 0 %>" step="0.1" min="0">
                </div>
                <div class="form-group">
                    <label>EA Account</label>
                    <select name="ea_account" class="form-control">
                        <% accounts.forEach(a => { %>
                        <option value="<%= a.account_name %>" <%= game?.ea_account === a.account_name ? 'selected' : '' %>><%= a.account_name %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label class="checkbox-label">
                    <input type="checkbox" name="enabled" value="1" <%= game?.enabled !== 0 ? 'checked' : '' %>>
                    Enabled
                </label>
            </div>
            
            <div style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary"><%= game ? 'üíæ Save Changes' : '‚ûï Add Game' %></button>
                <a href="/dashboard/ea/games" class="btn btn-secondary" style="margin-left: 10px;">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
.checkbox-label { display: flex; align-items: center; gap: 8px; cursor: pointer; color: #fff; }
.checkbox-label input { width: 18px; height: 18px; }
</style>

<%- include('_layout-end') %>
