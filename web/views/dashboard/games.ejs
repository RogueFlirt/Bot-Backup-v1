<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Pub's Lounge</title>
    <link rel="stylesheet" href="/dashboard/static/css/dashboard.css">
    <style>
        .success-banner {
            background: rgba(35, 165, 89, 0.2);
            border: 1px solid var(--accent-success);
            color: var(--accent-success);
            padding: 12px 16px;
            border-radius: 6px;
            margin-bottom: 16px;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <span class="logo">ğŸº</span>
                <h1>Pub's Lounge</h1>
            </div>
            <nav class="sidebar-nav">
                <a href="/dashboard" class="nav-item"><span class="nav-icon">ğŸ“Š</span><span>Dashboard</span></a>
                <a href="/dashboard/games" class="nav-item active"><span class="nav-icon">ğŸ®</span><span>Games</span></a>
                <a href="/dashboard/accounts" class="nav-item"><span class="nav-icon">ğŸ‘¤</span><span>Accounts</span></a>
                <a href="/dashboard/tokens" class="nav-item"><span class="nav-icon">ğŸ«</span><span>Tokens</span></a>
                <a href="/dashboard/transcripts" class="nav-item"><span class="nav-icon">ğŸ“œ</span><span>Transcripts</span></a>
                <div class="nav-divider"></div>
                <a href="/dashboard/analytics" class="nav-item"><span class="nav-icon">ğŸ“ˆ</span><span>Analytics</span></a>
                <a href="/dashboard/activations" class="nav-item"><span class="nav-icon">âœ…</span><span>Activated Users</span></a>
                <div class="nav-divider"></div>
                <a href="/dashboard/generate" class="nav-item"><span class="nav-icon">âš¡</span><span>Generate Token</span></a>
                <a href="/dashboard/ticket-logs" class="nav-item"><span class="nav-icon">ğŸ«</span><span>Ticket Logs</span></a>
                <a href="/dashboard/audit-logs" class="nav-item"><span class="nav-icon">ğŸ“‹</span><span>Audit Logs</span></a>
                <a href="/dashboard/staff-activity" class="nav-item">
                <span class="nav-icon">â³</span>
                <span>Staff Activity</span>
            </a>
            <a href="/dashboard/macros" class="nav-item">
                <span class="nav-icon">ğŸ“</span>
                <span>Macros</span>
            </a>
            <a href="/dashboard/files" class="nav-item"><span class="nav-icon">ğŸ“</span><span>File Manager</span></a>
                
                <div class="nav-divider"></div>
                
                <div class="nav-section-title">ğŸŸ  Ubisoft</div>
                <a href="/dashboard/ubisoft" class="nav-item"><span class="nav-icon">ğŸ®</span><span>Ubisoft Games</span></a>
                
                <div class="nav-divider"></div>
                
                <div class="nav-section-title">ğŸ”´ EA</div>
                <a href="/dashboard/ea" class="nav-item"><span class="nav-icon">ğŸ®</span><span>EA Games</span></a>
                <a href="/dashboard/ea/requests" class="nav-item"><span class="nav-icon">ğŸ“‹</span><span>EA Requests</span></a>
                
                <div class="nav-divider"></div>
                
                <div class="nav-section-title">ğŸ“¦ Sigma</div>
                <a href="/dashboard/sigma" class="nav-item"><span class="nav-icon">ğŸ“¦</span><span>Sigma UI</span></a>
            </nav>
            <% if (user) { %>
            <div class="sidebar-footer">
                <div class="user-info">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="" class="user-avatar" onerror="this.style.display='none'">
                    <div class="user-details">
                        <span class="user-name"><%= user.username %></span>
                        <span class="user-role">Staff</span>
                    </div>
                </div>
                <a href="/dashboard/logout" class="logout-btn">Logout</a>
            </div>
            <% } %>
        </aside>
        
        <main class="main-content">
            <header class="content-header">
                <h2><%= title %> (<%= games.length %>)</h2>
                <div class="header-actions">
                    <button onclick="fetchAllCovers()" class="btn btn-secondary" id="fetchAllBtn">ğŸ–¼ï¸ Fetch Missing Covers</button>
                    <a href="/dashboard/games/add" class="btn btn-primary">+ Add Game</a>
                </div>
            </header>
            
            <div class="content-body">
                <script>
                    // Check for success message in URL
                    const params = new URLSearchParams(window.location.search);
                    const success = params.get('success');
                    if (success) {
                        const messages = {
                            'added': 'âœ… Game added successfully!',
                            'updated': 'âœ… Game updated successfully!',
                            'deleted': 'âœ… Game deleted successfully!',
                            'covers': 'âœ… Cover art updated!'
                        };
                        if (messages[success]) {
                            document.write('<div class="success-banner">' + messages[success] + '</div>');
                        }
                        // Remove from URL
                        window.history.replaceState({}, '', window.location.pathname);
                    }
                </script>
                
                <!-- Covers fetch progress -->
                <div id="coverProgress" style="display: none; margin-bottom: 16px; padding: 16px; background: var(--bg-secondary); border-radius: 8px; border: 1px solid var(--border-color);">
                    <div style="display: flex; align-items: center; gap: 12px;">
                        <div class="spinner" style="width: 20px; height: 20px; border: 2px solid var(--text-muted); border-top-color: var(--accent-primary); border-radius: 50%; animation: spin 1s linear infinite;"></div>
                        <span id="coverProgressText">Fetching cover art...</span>
                    </div>
                </div>
                <style>@keyframes spin { to { transform: rotate(360deg); } }</style>
                
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Cover</th>
                                <th>Game Name</th>
                                <th>Size (GB)</th>
                                <th>Folder Name</th>
                                <th>Tokens</th>
                                <th>Demand</th>
                                <th>Panel</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% games.forEach(game => { %>
                            <tr>
                                <td>
                                    <% if (game.cover_url) { %>
                                    <img src="<%= game.cover_url %>" alt="" style="width: 40px; height: 60px; object-fit: cover; border-radius: 4px;">
                                    <% } else { %>
                                    <button onclick="fetchCover(<%= game.id %>, '<%= game.game_name.replace(/'/g, "\\'") %>')" class="btn btn-sm btn-secondary" title="Fetch cover from SteamGridDB">ğŸ–¼ï¸</button>
                                    <% } %>
                                </td>
                                <td>
                                    <strong><%= game.game_name %></strong>
                                    <br><small style="color: var(--text-muted);"><%= game.game_id %></small>
                                </td>
                                <td><%= game.size_gb || '-' %></td>
                                <td>
                                    <% 
                                    // Strip any HTML tags from folder_name (cleanup bad data)
                                    const cleanFolderName = game.folder_name ? 
                                        game.folder_name.replace(/<[^>]*>/g, '').trim() : null;
                                    %>
                                    <% if (cleanFolderName && cleanFolderName !== 'Not set') { %>
                                        <%= cleanFolderName %>
                                    <% } else { %>
                                        <span style="color: #f59e0b;">Not set</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge badge-<%= game.available_tokens > 10 ? 'success' : game.available_tokens > 0 ? 'warning' : 'danger' %>">
                                        <%= game.available_tokens %> / <%= game.total_tokens %>
                                    </span>
                                </td>
                                <td>
                                    <% if (game.demand_type === 'high') { %>
                                    <span class="badge badge-danger">ğŸ”¥ High</span>
                                    <% } else { %>
                                    <span class="badge badge-info">Normal</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (game.free_panel === 1) { %>
                                    <span class="badge badge-success">ğŸ†“ Free + Donator</span>
                                    <% } else { %>
                                    <span class="badge badge-warning">ğŸ’ Donator Only</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/dashboard/games/<%= game.id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                
                <div style="margin-top: 20px; padding: 16px; background: var(--bg-secondary); border-radius: 8px; border: 1px solid var(--border-color);">
                    <h4 style="margin-bottom: 12px;">ğŸ“Š Panel Summary</h4>
                    <div style="display: flex; gap: 24px;">
                        <div>
                            <strong style="color: var(--accent-success);">ğŸ†“ Free Panel:</strong>
                            <%= games.filter(g => g.free_panel === 1).length %> games
                        </div>
                        <div>
                            <strong style="color: var(--accent-warning);">ğŸ’ Donator Only:</strong>
                            <%= games.filter(g => g.free_panel !== 1).length %> games
                        </div>
                        <div>
                            <strong style="color: var(--accent-danger);">ğŸ”¥ High Demand:</strong>
                            <%= games.filter(g => g.demand_type === 'high').length %> games
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    
    <script>
        // Fetch cover for single game
        async function fetchCover(gameId, gameName) {
            const btn = event.target;
            btn.disabled = true;
            btn.textContent = 'â³';
            
            try {
                const res = await fetch(`/dashboard/games/${gameId}/fetch-cover`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await res.json();
                
                if (data.success) {
                    // Replace button with image
                    btn.outerHTML = `<img src="${data.coverUrl}" alt="" style="width: 40px; height: 60px; object-fit: cover; border-radius: 4px;">`;
                } else {
                    alert(`Failed to fetch cover for ${gameName}: ${data.error}`);
                    btn.disabled = false;
                    btn.textContent = 'ğŸ–¼ï¸';
                }
            } catch (err) {
                alert('Error: ' + err.message);
                btn.disabled = false;
                btn.textContent = 'ğŸ–¼ï¸';
            }
        }
        
        // Fetch all missing covers
        async function fetchAllCovers() {
            const btn = document.getElementById('fetchAllBtn');
            const progress = document.getElementById('coverProgress');
            const progressText = document.getElementById('coverProgressText');
            
            if (!confirm('Fetch cover art for all games missing covers?\n\nThis may take a few minutes due to API rate limits.')) {
                return;
            }
            
            btn.disabled = true;
            btn.textContent = 'â³ Fetching...';
            progress.style.display = 'block';
            progressText.textContent = 'Fetching cover art from SteamGridDB...';
            
            try {
                const res = await fetch('/dashboard/games/fetch-all-covers', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await res.json();
                
                progress.style.display = 'none';
                btn.disabled = false;
                btn.textContent = 'ğŸ–¼ï¸ Fetch Missing Covers';
                
                if (data.success) {
                    alert(`âœ… Cover fetch complete!\n\nUpdated: ${data.updated}\nFailed: ${data.failed}\nTotal: ${data.total}`);
                    if (data.updated > 0) {
                        location.reload();
                    }
                } else {
                    alert('Error: ' + data.error);
                }
            } catch (err) {
                progress.style.display = 'none';
                btn.disabled = false;
                btn.textContent = 'ğŸ–¼ï¸ Fetch Missing Covers';
                alert('Error: ' + err.message);
            }
        }
    </script>
</body>
</html>
