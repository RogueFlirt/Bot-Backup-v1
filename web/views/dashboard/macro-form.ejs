<%- include('_layout-start') %>

<div class="content-header">
    <h2><%= macro ? '‚úèÔ∏è Edit' : '‚ûï Add' %> Macro</h2>
    <a href="/dashboard/macros" class="btn btn-secondary">‚Üê Back</a>
</div>

<div class="content-body">
    <div class="card" style="max-width: 700px;">
        <form method="POST" action="/dashboard/macros/<%= macro ? macro.id + '/edit' : 'add' %>">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control" value="<%= macro?.name || '' %>" required placeholder="e.g., Welcome Message">
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label>Trigger</label>
                    <input type="text" name="trigger" class="form-control" value="<%= macro?.trigger || '' %>" required placeholder="e.g., welcome">
                    <small style="color: #888;">Used as /macro [trigger]</small>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <select name="category" class="form-control">
                        <option value="general" <%= macro?.category === 'general' ? 'selected' : '' %>>General</option>
                        <option value="support" <%= macro?.category === 'support' ? 'selected' : '' %>>Support</option>
                        <option value="info" <%= macro?.category === 'info' ? 'selected' : '' %>>Info</option>
                        <option value="warning" <%= macro?.category === 'warning' ? 'selected' : '' %>>Warning</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label>Content</label>
                <textarea name="content" class="form-control" rows="8" required placeholder="Enter the macro content..."><%= macro?.content || '' %></textarea>
                <small style="color: #888;">You can use {user} for username, {game} for game name</small>
            </div>
            
            <div style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary"><%= macro ? 'üíæ Save Changes' : '‚ûï Create Macro' %></button>
                <a href="/dashboard/macros" class="btn btn-secondary" style="margin-left: 10px;">Cancel</a>
            </div>
        </form>
    </div>
</div>

<%- include('_layout-end') %>
